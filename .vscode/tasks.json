{
    "tasks": [
        {
            "label": "Run Numbers",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "${config:processing.path}",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "args": [
                "--force",
                "--sketch=${workspaceRoot}/processing/numbers",
                "--output=${workspaceRoot}/processing/out",
                "--run"
            ],
            "windows": {
                "type": "process",
                "args": [
                    "--force",
                    {
                        "value": "--sketch=${workspaceRoot}\\processing\\numbers",
                        "quoting": "strong"
                    },
                    {
                        "value": "--output=${workspaceRoot}\\processing\\out",
                        "quoting": "strong"
                    },
                    "--run"
                ]
            }
        },
